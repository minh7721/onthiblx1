<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listCauHoi"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="22dp"
        android:text="Câu hỏi"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/cau_hoi"
        >

    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:src="@drawable/biencam"
        android:id="@+id/hinh_anh"
        ></ImageView>

      <RadioButton
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Đáp án A"
          android:textColor="#000"
          android:textSize="22dp"
          android:background="@drawable/linetexts"
          android:id="@+id/rbDapAnA"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          >

      </RadioButton>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đáp án B"
        android:textColor="#000"
        android:textSize="22dp"
        android:background="@drawable/linetexts"
        android:id="@+id/rbDapAnB"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

    </RadioButton>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đáp án C"
        android:textColor="#000"
        android:textSize="22dp"
        android:background="@drawable/linetexts"
        android:id="@+id/rbDapAnC"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

    </RadioButton>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đáp án D"
        android:textColor="#000"
        android:textSize="22dp"
        android:background="@drawable/linetexts"
        android:id="@+id/rbDapAnD"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

    </RadioButton>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="100dp"
       >

       <ImageButton
           android:id="@+id/btnPrev"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_alignParentLeft="true"
           android:backgroundTint="#299A15"
           app:srcCompat="@android:drawable/ic_media_rew" />

       <ImageButton
           android:id="@+id/btnNext"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           android:layout_gravity="right"
           android:backgroundTint="#299A15"
           app:srcCompat="@android:drawable/ic_media_ff" />
   </RelativeLayout>
</LinearLayout>